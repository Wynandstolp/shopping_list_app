<h1> Add New Item </h1>

<%= form_for(@item) do |f| %>

<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :department %>
    <%= f.text_field :department %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
